<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <fragment
        android:id="@+id/confirmation_fragment"
        android:name="com.example.parkingreservation.ConfirmationFragment"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_confirmation"/>

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.example.parkingreservation.MapsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/confirmation_fragment"
        tools:layout="@layout/fragment_maps"
        android:layout_toEndOf="@+id/confirmation_fragment" />

</RelativeLayout>